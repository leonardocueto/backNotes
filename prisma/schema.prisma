generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Note {
  id         Int       @id @default(autoincrement())
  name       String
  note       String
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  archive    Boolean
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  notes Note[]
}
